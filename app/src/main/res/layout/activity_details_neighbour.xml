<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.neighbour_list.DetailsNeighbourActivity">

    <ImageView
        android:id="@+id/details_avatar"
        android:layout_width="410dp"
        android:layout_height="123dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/details_titre"
        android:layout_width="132dp"
        android:layout_height="43dp"
        android:text="Caroline"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="66dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewDetails"
        android:layout_width="355dp"
        android:layout_height="240dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="156dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="368dp"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="1dp">

            <TextView
                android:id="@+id/details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Caroline"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Caroline" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.336"
                app:srcCompat="@android:drawable/ic_menu_compass" />

            <TextView
                android:id="@+id/details_adresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="83dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.482"
                app:srcCompat="@android:drawable/ic_menu_call" />

            <TextView
                android:id="@+id/details_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Téléphone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.624"
                tools:layout_editor_absoluteX="61dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:srcCompat="@android:drawable/ic_menu_share" />

            <TextView
                android:id="@+id/details_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://www.facebook.com/Caroline"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="190dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewAbout"
        android:layout_width="356dp"
        android:layout_height="128dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="410dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/details_about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="À propos de moi"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="19dp" />

            <TextView
                android:id="@+id/details_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:text="À propos de Caroline."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>